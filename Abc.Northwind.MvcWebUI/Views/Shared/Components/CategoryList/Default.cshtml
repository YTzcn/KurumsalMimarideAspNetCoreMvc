@model Abc.Northwind.MvcWebUI.Models.CategoryListViewModel

<style>
    .no-link-styles {
        text-decoration: none;
    }
</style>

<div class="list-group">
    @foreach (var x in Model.Categories)
    {
        var css = "list-group-item";
        if (x.CategoryId == Model.CurentCategory)
        {
            css += " active";
        }
        <a href="/Product/?category=@x.CategoryId" class="@css">@x.CategoryName</a>

    }
</div>
